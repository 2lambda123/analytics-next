{
  "name": "analytics-next",
  "version": "1.0.0",
  "repository": "segmentio/analytics-next",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rm -rf dist",
    "test": "jest --forceExit",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'"
  },
  "engines": {
    "node": ">=12.16"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "p-timeout": "^3.2.0",
    "source-map-support": "^0.5.16",
    "uuid-random": "^1.3.2"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
