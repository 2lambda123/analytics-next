{
  "name": "analytics-next",
  "version": "1.0.0",
  "repository": "segmentio/analytics-next",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build-umd": "webpack",
    "build-commonjs": "tsc",
    "build-all": "yarn clean && yarn build-umd && yarn build-commonjs",
    "example": "yarn dev",
    "dev": "yarn build-commonjs && yarn concurrently \"yarn run-example\" \"yarn build-commonjs -w\" ",
    "run-example": "cd example && yarn && yarn dev",
    "clean": "rm -rf dist",
    "test": "jest --forceExit",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "analyze": "webpack --profile --json > stats.json && webpack-bundle-analyzer --port 4200 stats.json",
    "size": "NODE_ENV=production yarn build-umd > /dev/null && size-limit"
  },
  "engines": {
    "node": ">=12.16"
  },
  "size-limit": [
    {
      "path": "dist/umd/index.js",
      "limit": "12 KB"
    }
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 140
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@lukeed/uuid": "^1.0.1",
    "@segment/facade": "^3.3.1",
    "component-url": "component/url",
    "p-timeout": "^3.2.0",
    "p-whilst": "^2.1.0",
    "unfetch": "^4.1.0"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^4.6.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.161",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "compression-webpack-plugin": "^6.0.2",
    "concurrently": "^5.3.0",
    "delay": "^4.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "node-fetch": "^2.6.1",
    "prettier": "^2.0.2",
    "size-limit": "^4.6.0",
    "terser-webpack-plugin": "^4.2.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^8.0.4",
    "typescript": "^3.8.3",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
