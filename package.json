{
  "name": "analytics-next",
  "version": "1.0.0",
  "repository": "segmentio/analytics-next",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "node dist/src/boot.js",
    "build": "yarn clean && tsc",
    "clean": "rm -rf dist",
    "test": "jest --forceExit",
    "dev-typescript": "tsc --watch --preserveWatchOutput",
    "dev-server": "nodemon --inspect=38093 --watch dist dist/src/boot.js",
    "dev": "tsc && concurrently 'yarn dev-typescript' 'yarn dev-server'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'"
  },
  "engines": {
    "node": ">=12.16"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@segment/blocked-stats": "^2.2.0",
    "@segment/express-stats": "^1.3.1",
    "@segment/knobs-node": "^1.7.1",
    "@sentry/integrations": "^5.15.4",
    "@sentry/node": "^5.15.4",
    "ecs-logs-js": "^1.0.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "nanoid": "^3.0.0",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/helmet": "^0.0.45",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.14",
    "@types/test-listen": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "got": "^10.7.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "test-listen": "^1.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
