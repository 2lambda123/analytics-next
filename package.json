{
  "name": "analytics-next",
  "version": "1.0.0",
  "repository": "segmentio/analytics-next",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build-umd": "webpack",
    "build-commonjs": "tsc",
    "build-all": "yarn clean && yarn build-umd && yarn build-commonjs",
    "example": "yarn dev",
    "standalone-example": "concurrently \"webpack -w\" \"serve\"",
    "dev": "yarn build-all && yarn concurrently \"yarn run-example\" \"yarn build-commonjs -w\" ",
    "run-example": "cd example && yarn && yarn dev",
    "clean": "rm -rf dist",
    "test": "jest --forceExit",
    "coverage": "jest ----testPathIgnorePatterns=\"browser.test.ts\" --forceExit --collectCoverage && open coverage/lcov-report/index.html",
    "tdd": "jest --watch --notify",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "analyze": "webpack --profile --json > stats.json && webpack-bundle-analyzer --port 4200 stats.json",
    "size": "NODE_ENV=production yarn build-umd > /dev/null && size-limit",
    "release": "aws-okta exec plat-write -- ./scripts/release.ts",
    "release-prod": "NODE_ENV=production aws-okta exec plat-write -- ./scripts/release.ts"
  },
  "engines": {
    "node": ">=12.16"
  },
  "size-limit": [
    {
      "path": "dist/umd/index.js",
      "limit": "16 KB"
    }
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 140
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@lukeed/uuid": "^1.0.1",
    "@segment/facade": "^3.3.5",
    "component-url": "component/url",
    "dset": "^2.0.1",
    "js-cookie": "^2.2.1",
    "md5": "^2.3.0",
    "p-timeout": "^3.2.0",
    "p-whilst": "^2.1.0",
    "unfetch": "^4.1.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.6.0",
    "@types/fs-extra": "^9.0.2",
    "@types/jest": "^25.1.4",
    "@types/jest-dev-server": "^4.2.0",
    "@types/js-cookie": "^2.2.6",
    "@types/lodash": "^4.14.161",
    "@types/md5": "^2.2.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "add": "^2.0.6",
    "aws-sdk": "^2.782.0",
    "compression-webpack-plugin": "^6.0.2",
    "concurrently": "^5.3.0",
    "delay": "^4.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "execa": "^4.1.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "jest-dev-server": "^4.4.0",
    "lighthouse": "^6.4.1",
    "lint-staged": "^10.0.9",
    "log-update": "^4.0.0",
    "micro-memoize": "^4.0.9",
    "mime": "^2.4.6",
    "node-fetch": "^2.6.1",
    "playwright": "^1.5.1",
    "prettier": "^2.0.2",
    "serve": "^11.3.2",
    "size-limit": "^4.6.0",
    "terser-webpack-plugin": "^4.2.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "yarn": "^1.22.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
